<apex:page controller="MassDeleteAccountCtrl" showHeader="false" sidebar="false" lightningStylesheets="true">

    <apex:form >

        <apex:pageBlock id="block">

        <apex:Pagemessages />

            <apex:pageBlockSection columns="1">

                <apex:pageBlockTable value="{!acctWrapList}" var="acctWrap">

                    <apex:column >

                        <apex:facet name="header">

                            <apex:inputCheckbox value="{!selectAll}">

                                <apex:actionSupport event="onchange" action="{!selectAllAccounts}" rerender="block"/>

                            </apex:inputCheckbox>

                        </apex:facet>

                        <apex:inputCheckbox value="{!acctWrap.isCheck}"/>

                    </apex:column>

                    <apex:column value="{!acctWrap.acct.Name}"/>

                    <apex:column value="{!acctWrap.acct.Type}"/>

                    <apex:column value="{!acctWrap.acct.Industry}"/>

                </apex:pageBlockTable>

            </apex:pageBlockSection>

            <apex:pageBlockButtons location="bottom" >

                <apex:commandButton value="Delete Accounts" action="{!deleteAccounts}"  />

            </apex:pageBlockButtons>

        </apex:pageBlock>

    </apex:form>

</apex:page>